<!-- Hero Section -->
<div class="relative overflow-hidden gradient-bg">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <svg class="w-full h-full" viewBox="0 0 100 100" fill="none">
      <defs>
        <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
          <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
        </pattern>
      </defs>
      <rect width="100" height="100" fill="url(#grid)" />
    </svg>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-24 lg:py-32">
    <div class="text-center">
      <!-- Hero Content -->
      <div class="animate-fade-in">
        <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-stone-900 mb-8">
          <span class="block text-balance">Discover</span>
          <span class="block text-balance bg-gradient-to-r from-orange-500 to-orange-600 bg-clip-text text-transparent">
            Art Posters
          </span>
          <span class="block text-balance">You'll Love</span>
        </h1>
        
        <p class="mt-6 max-w-2xl mx-auto text-xl text-stone-600 text-balance leading-relaxed">
          Join our community of passionate collectors. Track your collection, discover rare finds, and connect with fellow art enthusiasts from around the world.
        </p>
      </div>
      
      <% if user_signed_in? %>
        <!-- Authenticated User CTAs -->
        <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center items-center max-w-md mx-auto">
          <%= link_to profile_path, class: "bg-orange-500 text-white hover:bg-orange-600 focus:ring-orange-500 shadow-sm hover:shadow-md inline-flex items-center justify-center px-6 py-3 text-base border border-transparent font-medium rounded-lg transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 w-full sm:w-auto" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            View My Profile
          <% end %>
          
          <%= link_to user_posters_path, class: "bg-white text-stone-700 border border-stone-300 hover:bg-stone-50 focus:ring-stone-500 shadow-sm hover:shadow-md inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-lg transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 w-full sm:w-auto" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
            </svg>
            Browse Collection
          <% end %>
        </div>
        
        <div class="mt-8">
          <div class="inline-flex items-center px-6 py-3 bg-white/70 backdrop-blur-sm rounded-full shadow-sm border border-stone-200">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-full flex items-center justify-center">
                <span class="text-sm font-semibold text-white">
                  <%= current_user.first_name&.first %><%= current_user.last_name&.first %>
                </span>
              </div>
              <div class="text-left">
                <p class="text-sm font-medium text-stone-900">
                  Welcome back, <%= current_user.first_name %>!
                </p>
                <p class="text-xs text-stone-600">
                  Ready to explore new artwork?
                </p>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <!-- Guest User CTAs -->
        <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center items-center max-w-md mx-auto">
          <%= link_to new_registration_path, class: "bg-orange-500 text-white hover:bg-orange-600 focus:ring-orange-500 shadow-sm hover:shadow-md inline-flex items-center justify-center px-6 py-3 text-base border border-transparent font-medium rounded-lg transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 w-full sm:w-auto group" do %>
            <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
            Start Collecting Free
          <% end %>
          
          <%= link_to new_session_path, class: "bg-white text-stone-700 border border-stone-300 hover:bg-stone-50 focus:ring-stone-500 shadow-sm hover:shadow-md inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-lg transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 w-full sm:w-auto group" do %>
            <svg class="w-5 h-5 mr-2 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
            </svg>
            Sign In
          <% end %>
        </div>
        
        <div class="mt-8">
          <p class="text-stone-500 text-sm">
            Join <span class="font-semibold text-orange-600">thousands</span> of collectors worldwide
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Features Section -->
<div class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-stone-900 mb-4">
        Why Collectors Choose Us
      </h2>
      <p class="text-xl text-stone-600 max-w-2xl mx-auto text-balance">
        Everything you need to manage, discover, and connect through art poster collecting
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Feature 1 -->
      <div class="text-center group">
        <div class="w-16 h-16 bg-gradient-to-br from-orange-400 to-orange-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:shadow-lg transition-shadow duration-200">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-stone-900 mb-3">Track Collections</h3>
        <p class="text-stone-600 leading-relaxed">
          Organize and catalog your art poster collection with detailed records, photos, and provenance tracking.
        </p>
      </div>
      
      <!-- Feature 2 -->
      <div class="text-center group">
        <div class="w-16 h-16 bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:shadow-lg transition-shadow duration-200">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-stone-900 mb-3">Discover Art</h3>
        <p class="text-stone-600 leading-relaxed">
          Explore rare finds, trending pieces, and hidden gems from artists, venues, and collectors worldwide.
        </p>
      </div>
      
      <!-- Feature 3 -->
      <div class="text-center group">
        <div class="w-16 h-16 bg-gradient-to-br from-blue-400 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:shadow-lg transition-shadow duration-200">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-stone-900 mb-3">Connect & Trade</h3>
        <p class="text-stone-600 leading-relaxed">
          Build relationships with collectors, artists, and venues. Trade, sell, and share your passion for art.
        </p>
      </div>
    </div>
  </div>
</div>
