<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8 pt-4">
    <h1 class="text-3xl font-bold text-stone-900 mb-4">Live Shows</h1>
    
    <!-- Search and Filter -->
    <div class="flex flex-col md:flex-row gap-4 mb-6">
      <%= form_with url: shows_path, method: :get, local: true, class: "flex flex-col md:flex-row gap-4 flex-1" do |form| %>
        <div class="flex-1">
          <%= form.text_field :band, 
                placeholder: "Search by band...", 
                value: params[:band],
                class: "w-full px-4 py-3 text-sm border border-stone-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
        </div>
        <div class="flex-1">
          <%= form.text_field :venue, 
                placeholder: "Search by venue...", 
                value: params[:venue],
                class: "w-full px-4 py-3 text-sm border border-stone-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
        </div>
        <div class="w-32">
          <%= form.number_field :year, 
                placeholder: "Year", 
                value: params[:year],
                class: "w-full px-4 py-3 text-sm border border-stone-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-transparent" %>
        </div>
        <button type="submit" class="px-6 py-3 bg-red-600 text-white text-sm rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 transition-colors duration-200 whitespace-nowrap">
          Search
        </button>
      <% end %>
    </div>

    <!-- Results count -->
    <p class="text-sm text-stone-600 mb-4">
      Showing <%= @shows.count %> of <%= @shows.total_count %> shows
    </p>
  </div>

  <!-- Shows List -->
  <div class="bg-white rounded-lg shadow-sm border border-stone-200 overflow-hidden">
    <% if @shows.any? %>
      <div class="divide-y divide-stone-200">
        <% @shows.each do |show| %>
          <div class="p-6 hover:bg-stone-50 transition-colors duration-200">
            <%= link_to show_path(show), class: "block" do %>
              <div class="flex items-center justify-between">
                <div class="flex-1">
                  <div class="flex items-center space-x-3 mb-2">
                    <h3 class="text-lg font-semibold text-stone-900">
                      <%= show.band.name %>
                    </h3>
                    <span class="text-sm text-stone-500">at</span>
                    <span class="text-lg text-stone-700">
                      <%= show.venue.name %>
                    </span>
                  </div>
                  
                  <div class="flex items-center space-x-4 text-sm text-stone-600">
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      <%= show.show_date.strftime("%B %d, %Y") %>
                    </span>
                    
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                      <%= show.venue.location_summary %>
                    </span>
                    
                    <span class="flex items-center">
                      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
                      </svg>
                      <%= pluralize(show.setlist_songs.count, 'song') %>
                    </span>
                  </div>
                </div>
                
                <div class="flex items-center text-stone-400">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-stone-900">No shows found</h3>
        <p class="mt-1 text-sm text-stone-500">
          <% if params[:band].present? || params[:venue].present? || params[:year].present? %>
            Try adjusting your search criteria.
          <% else %>
            Shows will appear here once imported.
          <% end %>
        </p>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <% if @shows.respond_to?(:total_pages) && @shows.total_pages > 1 %>
    <div class="mt-8 flex justify-center">
      <%= paginate @shows %>
    </div>
  <% end %>
</div>