<% content_for :title, "#{@show.band.name} at #{@show.venue.name} - #{@show.show_date.strftime('%B %d, %Y')}" %>
<% content_for :meta_description, "Setlist and details for #{@show.band.name} concert at #{@show.venue.name} on #{@show.show_date.strftime('%B %d, %Y')}." %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Breadcrumb -->
  <nav class="flex mb-6" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
      <li class="inline-flex items-center">
        <%= link_to root_path, class: "text-stone-500 hover:text-stone-900 transition-colors duration-200" do %>
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-3a1 1 0 011-1h2a1 1 0 011 1v3a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
          </svg>
          Home
        <% end %>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="w-4 h-4 text-stone-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          <%= link_to shows_path, class: "ml-1 text-stone-500 hover:text-stone-900 transition-colors duration-200" do %>
            Shows
          <% end %>
        </div>
      </li>
      <li>
        <div class="flex items-center">
          <svg class="w-4 h-4 text-stone-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
          </svg>
          <span class="ml-1 text-stone-900 font-medium"><%= @show.show_date.strftime('%B %d, %Y') %></span>
        </div>
      </li>
    </ol>
  </nav>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Show Details -->
    <div class="lg:col-span-2">
      <!-- Header -->
      <div class="bg-white rounded-lg shadow-sm border border-stone-200 p-6 mb-6">
        <div class="flex items-start justify-between mb-4">
          <div>
            <h1 class="text-3xl font-bold text-stone-900 mb-2">
              <%= @show.band.name %>
            </h1>
            <h2 class="text-xl text-stone-700 mb-4">
              <%= @show.venue.name %>
            </h2>
          </div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
          <div class="flex items-center text-stone-600">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <strong class="mr-1">Date:</strong>
            <%= @show.show_date.strftime('%A, %B %d, %Y') %>
          </div>
          
          <div class="flex items-center text-stone-600">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <strong class="mr-1">Location:</strong>
            <%= @venue.location_summary %>
          </div>
          
          <div class="flex items-center text-stone-600">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
            </svg>
            <strong class="mr-1">Songs:</strong>
            <%= pluralize(@setlist_songs.count, 'song') %>
          </div>
        </div>
      </div>

      <!-- Setlist -->
      <div class="bg-white rounded-lg shadow-sm border border-stone-200 p-6">
        <h3 class="text-2xl font-bold text-stone-900 mb-6">Setlist</h3>
        
        <% if @sets.any? %>
          <% # Define proper set order
             set_order = ['main_set', 'encore', 'acoustic_set', 'second_set']
             ordered_sets = set_order.map { |type| [type, @sets[type]] }.select { |_, songs| songs.present? }
             ordered_sets += @sets.reject { |type, _| set_order.include?(type) }.to_a %>
          <% ordered_sets.each do |set_type, songs| %>
            <div class="mb-8 last:mb-0">
              <h4 class="text-lg font-semibold text-stone-800 mb-4 pb-2 border-b border-stone-200">
                <%= set_type.humanize %>
                <span class="text-sm font-normal text-stone-500">
                  (<%= pluralize(songs.count, 'song') %>)
                </span>
              </h4>
              
              <div class="space-y-2">
                <% songs.each_with_index do |setlist_song, index| %>
                  <div class="flex items-start space-x-3 py-2 hover:bg-stone-50 rounded-lg px-2 -mx-2 transition-colors duration-200">
                    <div class="flex-shrink-0 w-8 text-right">
                      <span class="text-sm text-stone-500 font-medium">
                        <%= setlist_song.position %>
                      </span>
                    </div>
                    
                    <div class="flex-1">
                      <div class="flex items-center space-x-2">
                        <h5 class="text-base font-medium text-stone-900">
                          <%= setlist_song.song.title %>
                        </h5>
                        
                        <% if setlist_song.song.is_cover_song %>
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                            Cover
                            <% if setlist_song.song.original_artist.present? %>
                              Â· <%= setlist_song.song.original_artist %>
                            <% end %>
                          </span>
                        <% end %>
                      </div>
                      
                      <% if setlist_song.notes.present? %>
                        <div class="text-sm text-stone-600 mt-1">
                          <% if setlist_song.notes.is_a?(Array)
                               setlist_song.notes.each do |note|
                                 if note.is_a?(Hash) %>
                                   <% if note['type'] == 'special_performance' && note['description'] == 'guest performance'
                                        # Parse guest information from show notes
                                        guest_info = @show.show_notes&.match(/\*\s*(.+?)(?:\n|$)/)&.captures&.first&.strip
                                        badge_text = guest_info ? "Guest: #{guest_info}" : "Guest performance" %>
                                     <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800 mr-1 mb-1">
                                       <%= badge_text %>
                                     </span>
                                   <% else %>
                                     <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-amber-100 text-amber-800 mr-1 mb-1">
                                       <%= note['description'] || note['note'] || note['type'] %>
                                     </span>
                                   <% end %>
                                 <% else %>
                                   <span class="text-stone-600"><%= note %></span>
                                 <% end
                               end
                             else %>
                               <span class="text-stone-600"><%= setlist_song.notes %></span>
                             <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-stone-900">No setlist available</h3>
            <p class="mt-1 text-sm text-stone-500">The setlist for this show has not been imported yet.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Venue Details -->
      <div class="bg-white rounded-lg shadow-sm border border-stone-200 p-6">
        <h3 class="text-lg font-semibold text-stone-900 mb-4">Venue Details</h3>
        
        <div class="space-y-3">
          <div>
            <h4 class="text-sm font-medium text-stone-700">Name</h4>
            <p class="text-sm text-stone-900"><%= @venue.name %></p>
          </div>
          
          <% if @venue.venue_type.present? %>
            <div>
              <h4 class="text-sm font-medium text-stone-700">Type</h4>
              <p class="text-sm text-stone-900"><%= @venue.venue_type.humanize %></p>
            </div>
          <% end %>
          
          <% if @venue.city.present? || @venue.administrative_area.present? %>
            <div>
              <h4 class="text-sm font-medium text-stone-700">Location</h4>
              <p class="text-sm text-stone-900">
                <%= [@venue.city, @venue.administrative_area, @venue.country].compact.join(', ') %>
              </p>
            </div>
          <% end %>
          
          <% if @venue.capacity.present? %>
            <div>
              <h4 class="text-sm font-medium text-stone-700">Capacity</h4>
              <p class="text-sm text-stone-900">
                <%= number_with_delimiter(@venue.capacity) %>
                <span class="text-stone-500">(<%= @venue.capacity_range %>)</span>
              </p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="bg-white rounded-lg shadow-sm border border-stone-200 p-6">
        <h3 class="text-lg font-semibold text-stone-900 mb-4">Show Stats</h3>
        
        <div class="space-y-3">
          <div class="flex justify-between">
            <span class="text-sm text-stone-600">Total Songs</span>
            <span class="text-sm font-medium text-stone-900"><%= @setlist_songs.count %></span>
          </div>
          
          <% cover_count = @setlist_songs.joins(:song).where(songs: { is_cover_song: true }).count %>
          <% if cover_count > 0 %>
            <div class="flex justify-between">
              <span class="text-sm text-stone-600">Cover Songs</span>
              <span class="text-sm font-medium text-stone-900"><%= cover_count %></span>
            </div>
          <% end %>
          
          <div class="flex justify-between">
            <span class="text-sm text-stone-600">Sets</span>
            <span class="text-sm font-medium text-stone-900"><%= @sets.keys.count %></span>
          </div>
        </div>
      </div>

      <!-- Related Posters -->
      <% if @posters.any? %>
        <div class="bg-white rounded-lg shadow-sm border border-stone-200 p-6">
          <h3 class="text-lg font-semibold text-stone-900 mb-4">Related Posters</h3>
          
          <% @posters.each do |poster| %>
            <div class="border border-stone-200 rounded-lg p-4 mb-4 last:mb-0">
              <div>
                <!-- Poster Image -->
                <div class="mb-4">
                  <% if poster.image.attached? %>
                    <div class="w-full max-w-xs mx-auto bg-stone-100 rounded overflow-hidden shadow-sm">
                      <div class="relative aspect-[3/4] overflow-hidden">
                        <div class="progressive-image-container w-full h-full" 
                             data-controller="progressive-image"
                             data-progressive-image-placeholder-src-value="<%= url_for(poster.blur_placeholder_image_for_display) %>"
                             data-progressive-image-main-src-value="<%= url_for(poster.grid_thumbnail_image_for_display) %>">
                          
                          <!-- Blurred placeholder (loads instantly) -->
                          <img data-progressive-image-target="placeholder" 
                               class="progressive-placeholder absolute inset-0 w-full h-full object-contain" 
                               alt="<%= poster.name %> placeholder" />
                          
                          <!-- Main image (loads progressively) -->
                          <img data-progressive-image-target="mainImage" 
                               class="progressive-main-image absolute inset-0 w-full h-full object-contain loading" 
                               alt="<%= poster.name %>" />
                        </div>
                      </div>
                    </div>
                  <% else %>
                    <div class="w-32 h-40 mx-auto bg-stone-100 rounded flex items-center justify-center">
                      <svg class="w-8 h-8 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                  <% end %>
                </div>
                
                <!-- Poster Details -->
                <div>
                  <h4 class="text-base font-medium text-stone-900 mb-2">
                    <%= poster.name %>
                  </h4>
                  
                  <% # Check if this poster covers multiple shows at the same venue/band
                     related_shows = Show.joins(:band, :venue)
                                        .where(bands: { id: @show.band_id }, venues: { id: @show.venue_id })
                                        .where('EXTRACT(year FROM show_date) = ?', @show.show_date.year)
                                        .order(:show_date)
                     if related_shows.count > 1 %>
                    <div class="mb-2">
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        <%= related_shows.count %>-night run poster
                      </span>
                    </div>
                  <% end %>
                  
                  <div class="space-y-1 text-sm text-stone-600">
                    <% if poster.artists.any? %>
                      <div class="flex items-center">
                        <span class="font-medium text-stone-700 w-16">Artist:</span>
                        <span><%= poster.artists.map(&:name).join(', ') %></span>
                      </div>
                    <% end %>
                    
                    <% if poster.has_price? %>
                      <div class="flex items-center">
                        <span class="font-medium text-stone-700 w-16">Price:</span>
                        <span><%= poster.formatted_price %></span>
                      </div>
                    <% end %>
                    
                    <% if poster.edition_size.present? %>
                      <div class="flex items-center">
                        <span class="font-medium text-stone-700 w-16">Edition:</span>
                        <span><%= number_with_delimiter(poster.edition_size) %></span>
                      </div>
                    <% end %>
                    
                  </div>
                  
                  <div class="mt-3">
                    <%= link_to poster_path(poster), 
                        class: "inline-flex items-center px-3 py-1.5 border border-stone-300 text-xs font-medium rounded text-stone-700 bg-white hover:bg-stone-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200" do %>
                      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                      View Details
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>