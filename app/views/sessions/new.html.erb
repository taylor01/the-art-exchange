<%= render 'shared/auth_layout' do %>
  <div>
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Sign in to your account</h2>

    <%= form_with url: sessions_path, local: true, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.email_field :email, 
              value: @user&.email,
              required: true,
              class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: "Enter your email address" %>
        </div>
      </div>

      <!-- Login Method Selection -->
      <div class="space-y-4">
        <div class="flex items-center">
          <%= form.radio_button :login_method, "otp", 
              checked: true,
              class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
          <%= form.label :login_method_otp, "Send verification code to email", 
              class: "ml-3 block text-sm font-medium text-gray-700" %>
        </div>

        <div class="flex items-center">
          <%= form.radio_button :login_method, "password",
              class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300" %>
          <%= form.label :login_method_password, "Sign in with password", 
              class: "ml-3 block text-sm font-medium text-gray-700" %>
        </div>
      </div>

      <!-- Password field (hidden by default) -->
      <div id="password-field" class="hidden">
        <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= form.password_field :password,
              class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm",
              placeholder: "Enter your password" %>
        </div>
      </div>

      <div>
        <%= form.submit "Continue", 
            class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>

      <div class="flex items-center justify-between">
        <div class="text-sm">
          <%= link_to "Forgot your password?", new_password_reset_path, 
              class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </div>
        <div class="text-sm">
          <%= link_to "Create an account", new_registration_path, 
              class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </div>
      </div>
    <% end %>

    <!-- Social Login Section -->
    <div class="mt-6">
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-gray-300" />
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-2 bg-white text-gray-500">Or continue with</span>
        </div>
      </div>

      <div class="mt-6 grid grid-cols-3 gap-3">
        <%= link_to "/auth/google_oauth2", method: :post,
            class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
          <span class="sr-only">Sign in with Google</span>
          <!-- Google icon would go here -->
          <span>Google</span>
        <% end %>

        <%= link_to "/auth/facebook", method: :post,
            class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
          <span class="sr-only">Sign in with Facebook</span>
          <!-- Facebook icon would go here -->
          <span>Facebook</span>
        <% end %>

        <%= link_to "/auth/apple", method: :post,
            class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
          <span class="sr-only">Sign in with Apple</span>
          <!-- Apple icon would go here -->
          <span>Apple</span>
        <% end %>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const otpRadio = document.getElementById('login_method_otp');
      const passwordRadio = document.getElementById('login_method_password');
      const passwordField = document.getElementById('password-field');

      function togglePasswordField() {
        if (passwordRadio.checked) {
          passwordField.classList.remove('hidden');
        } else {
          passwordField.classList.add('hidden');
        }
      }

      otpRadio.addEventListener('change', togglePasswordField);
      passwordRadio.addEventListener('change', togglePasswordField);
    });
  </script>
<% end %>