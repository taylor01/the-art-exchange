<% if object.errors.any? %>
  <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-4 animate-fade-in mb-6">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="ml-3 flex-1">
        <h3 class="text-sm font-semibold text-red-800 mb-2">
          Please fix the following <%= pluralize(object.errors.count, "error") %>:
        </h3>
        <ul class="space-y-1">
          <% object.errors.full_messages.each do |message| %>
            <li class="text-sm text-red-700 flex items-start">
              <svg class="w-4 h-4 mt-0.5 mr-2 flex-shrink-0 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              <%= message %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<% end %>