<% content_for :title, "Admin Dashboard" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-stone-900 mb-2">Admin Dashboard</h1>
    <p class="text-stone-600">Manage the Art Exchange platform.</p>
  </div>

  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white shadow-md rounded-lg p-6">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-stone-600">Total Posters</p>
          <p class="text-2xl font-semibold text-stone-900"><%= Poster.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-gradient-to-br from-green-400 to-green-600 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-stone-600">Total Users</p>
          <p class="text-2xl font-semibold text-stone-900"><%= User.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-gradient-to-br from-purple-400 to-purple-600 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-stone-600">User Collections</p>
          <p class="text-2xl font-semibold text-stone-900"><%= UserPoster.count %></p>
        </div>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
      <div class="flex items-center">
        <div class="w-10 h-10 bg-gradient-to-br from-orange-400 to-orange-600 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
          </svg>
        </div>
        <div class="ml-4">
          <p class="text-sm font-medium text-stone-600">Venues</p>
          <p class="text-2xl font-semibold text-stone-900"><%= Venue.count %></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <div class="bg-white shadow-md rounded-lg p-6">
      <h3 class="text-lg font-medium text-stone-900 mb-4">Poster Management</h3>
      <p class="text-stone-600 text-sm mb-4">Add, edit, and manage concert posters in the system.</p>
      <div class="space-y-2">
        <%= link_to admin_posters_path, class: "block text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
          View All Posters →
        <% end %>
        <%= link_to new_admin_poster_path, class: "block text-green-600 hover:text-green-800 text-sm font-medium" do %>
          Add New Poster →
        <% end %>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
      <h3 class="text-lg font-medium text-stone-900 mb-4">Data Management</h3>
      <p class="text-stone-600 text-sm mb-4">Manage bands, venues, artists, and series.</p>
      <div class="space-y-2">
        <span class="block text-stone-400 text-sm">Bands: <%= Band.count %></span>
        <span class="block text-stone-400 text-sm">Artists: <%= Artist.count %></span>
        <span class="block text-stone-400 text-sm">Series: <%= Series.count %></span>
      </div>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
      <h3 class="text-lg font-medium text-stone-900 mb-4">User Analytics</h3>
      <p class="text-stone-600 text-sm mb-4">Monitor user activity and engagement.</p>
      <div class="space-y-2">
        <span class="block text-stone-400 text-sm">Confirmed Users: <%= User.confirmed.count %></span>
        <span class="block text-stone-400 text-sm">Active Collections: <%= UserPoster.owned.count %></span>
        <span class="block text-stone-400 text-sm">Wanted Posters: <%= UserPoster.wanted.count %></span>
      </div>
    </div>
  </div>
</div>