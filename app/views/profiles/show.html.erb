<div class="min-h-full bg-stone-50">
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-r from-orange-50 via-white to-emerald-50">
    <div class="absolute inset-0 opacity-10">
      <svg class="w-full h-full" viewBox="0 0 100 100" fill="none">
        <defs>
          <pattern id="profile-grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#profile-grid)" />
      </svg>
    </div>
    
    <div class="relative px-4 sm:px-6 lg:mx-auto lg:max-w-6xl lg:px-8">
      <div class="py-12 md:flex md:items-center md:justify-between">
        <div class="min-w-0 flex-1">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="h-20 w-20 rounded-2xl bg-gradient-to-br from-emerald-400 to-emerald-600 flex items-center justify-center shadow-lg">
                <span class="text-2xl font-bold text-white">
                  <%= current_user.first_name&.first %><%= current_user.last_name&.first %>
                </span>
              </div>
            </div>
            <div class="ml-6">
              <h1 class="text-3xl font-bold leading-tight text-stone-900 sm:text-4xl">
                <%= current_user.display_name %>
              </h1>
              <div class="mt-4 flex flex-col sm:flex-row sm:items-center sm:space-x-6 space-y-2 sm:space-y-0">
                <div class="flex items-center text-stone-600">
                  <svg class="mr-2 h-5 w-5 flex-shrink-0 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  <%= current_user.email %>
                </div>
                <div class="flex items-center text-emerald-600">
                  <svg class="mr-2 h-5 w-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  <span class="font-medium">Verified Account</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-8 md:mt-0 md:ml-6">
          <%= link_to edit_profile_path, class: "bg-white text-stone-700 border border-stone-300 hover:bg-stone-50 focus:ring-stone-500 shadow-sm hover:shadow-md inline-flex items-center justify-center px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2" do %>
            <svg class="-ml-0.5 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Profile
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Profile Content -->
  <div class="mt-8 mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Profile Information Card -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow-sm border border-stone-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-stone-200 bg-stone-50">
            <h3 class="text-lg font-semibold text-stone-900">Profile Information</h3>
            <p class="text-sm text-stone-600 mt-1">Your account details and settings</p>
          </div>
          <div class="px-6 py-4">
            <dl class="divide-y divide-stone-200">
              <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                <dt class="text-sm font-medium text-stone-500">Full name</dt>
                <dd class="mt-1 text-sm text-stone-900 sm:col-span-2 sm:mt-0 font-medium"><%= current_user.full_name %></dd>
              </div>
              <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                <dt class="text-sm font-medium text-stone-500">Email address</dt>
                <dd class="mt-1 text-sm text-stone-900 sm:col-span-2 sm:mt-0"><%= current_user.email %></dd>
              </div>
              <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                <dt class="text-sm font-medium text-stone-500">Member since</dt>
                <dd class="mt-1 text-sm text-stone-900 sm:col-span-2 sm:mt-0">
                  <%= current_user.created_at.strftime("%B %d, %Y") %>
                </dd>
              </div>
              <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                <dt class="text-sm font-medium text-stone-500">Account type</dt>
                <dd class="mt-1 sm:col-span-2 sm:mt-0">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= current_user.admin? ? 'bg-purple-100 text-purple-800' : 'bg-emerald-100 text-emerald-800' %>">
                    <%= current_user.admin? ? "Administrator" : "Collector" %>
                  </span>
                </dd>
              </div>
              <% if current_user.last_login_at %>
                <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
                  <dt class="text-sm font-medium text-stone-500">Last sign in</dt>
                  <dd class="mt-1 text-sm text-stone-900 sm:col-span-2 sm:mt-0">
                    <%= time_ago_in_words(current_user.last_login_at) %> ago
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>
      </div>
      
      <!-- Quick Stats Sidebar -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-xl shadow-sm border border-stone-200 overflow-hidden">
          <div class="px-6 py-4 border-b border-stone-200 bg-stone-50">
            <h3 class="text-lg font-semibold text-stone-900">Collection Stats</h3>
          </div>
          <div class="px-6 py-4 space-y-6">
            <div class="text-center">
              <div class="text-3xl font-bold text-orange-600">0</div>
              <div class="text-sm text-stone-600">Posters Collected</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-emerald-600">0</div>
              <div class="text-sm text-stone-600">Artists Followed</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-blue-600">0</div>
              <div class="text-sm text-stone-600">Venues Visited</div>
            </div>
          </div>
          <div class="px-6 py-4 border-t border-stone-200 bg-stone-50">
            <a href="#" class="bg-orange-500 text-white hover:bg-orange-600 focus:ring-orange-500 shadow-sm hover:shadow-md inline-flex items-center justify-center px-4 py-2 text-sm border border-transparent font-medium rounded-lg transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 w-full">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              Add First Poster
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Account Actions -->
    <div class="mt-8">
      <div class="bg-white rounded-xl shadow-sm border border-stone-200 overflow-hidden">
        <div class="px-6 py-4 border-b border-stone-200 bg-stone-50">
          <h3 class="text-lg font-semibold text-stone-900">Account Actions</h3>
          <p class="text-sm text-stone-600 mt-1">Manage your account settings</p>
        </div>
        <div class="px-6 py-4">
          <div class="flex flex-col space-y-3 sm:flex-row sm:space-y-0 sm:space-x-3">
            <%= link_to edit_profile_path, class: "bg-white text-stone-700 border border-stone-300 hover:bg-stone-50 focus:ring-stone-500 shadow-sm hover:shadow-md inline-flex items-center justify-center px-4 py-2 text-sm font-medium rounded-lg transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              Account Settings
            <% end %>
            
            <%= link_to destroy_session_path, 
                data: { 
                  "turbo-method": :delete,
                  confirm: "Are you sure you want to sign out?" 
                },
                class: "bg-red-500 text-white hover:bg-red-600 focus:ring-red-500 shadow-sm hover:shadow-md inline-flex items-center justify-center px-4 py-2 text-sm border border-transparent font-medium rounded-lg transition-all duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              Sign Out
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>